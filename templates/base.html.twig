<!DOCTYPE html>
<html lang="fr" class="h-100">
<head>
    <meta charset="utf-8">
    {% block favicon %}
        <link rel="icon" type="image/x-icon" href="{{ asset('bundles/acmarcheduobac/favicon.ico') }}"/>
    {% endblock %}
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>{% block title %}Mon duobac{% endblock %}</title>

    {% block stylesheets %}{% endblock %}

    {{ encore_entry_link_tags('app') }}
    {{ encore_entry_script_tags('app') }}

    <link href="{{ asset('bundles/acmarcheduobac/css/print.css') }}" rel="stylesheet" media="print">
</head>
<body class="d-flex flex-column h-100">
{% set action = app.request.attributes.get("_route") %}
{% include '@AcMarcheDuobac/_header.html.twig' %}
<main role="main" class="container pt-3">

    {% include '@AcMarcheDuobac/_flash_messages.html.twig' %}

    {% block notifications %}

    {% endblock %}

    {% block body %}

    {% endblock %}
</main>

{% block footer %}
    <footer class="footer mt-auto py-3 bg-light">
        <div class="container">
            <span class="text-muted"> </span>
        </div>
    </footer>
{% endblock %}
{% block scripts %}{% endblock %}
</body>
</html>
