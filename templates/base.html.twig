<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8">
    {% block favicon %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
    {% endblock %}
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>{% block title %}Mon duobac{% endblock %}</title>
    {% block stylesheets %}{% endblock %}
    <link href="{{ asset('bootstrap/css/bootstrap.min.css') }}" rel="stylesheet">
    <link href="{{ asset('css/app.css') }}" rel="stylesheet">
    <link href="{{ asset('css/datepicker.css') }}" rel="stylesheet">
    <link href="{{ asset('css/print.css') }}" rel="stylesheet" media="print">
    <script src="https://kit.fontawesome.com/c0409b25a3.js"></script>
</head>
<body>
{% set action = app.request.attributes.get("_route") %}
<nav class="navbar navbar-expand-md navbar-light bg-light fixed-top border-bottom shadow-sm">
    <a class="navbar-brand" href="{{ path('duobac_home') }}" title="Accueil">
        <span style="color: green;">
  <i class="fas fa-recycle"></i></span> Mes pesées </a>

    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExampleDefault"
            aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse justify-content-md-center" id="navbarsExampleDefault">
        <ul class="navbar-nav mr-auto ml-auto">
            {% include '@AcMarcheDuobac/_menu.html.twig' %}
        </ul>
        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a href="{{ path('app_logout') }}" class="nav-link" title="Déconnexion"><i
                                class="fas fa-sign-out-alt"></i></a>
                </li>
            </ul>
        {% else %}
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a href="{{ path('app_login') }}" class="nav-link" title="Connexion"><i
                                class="fas fa-sign-in-alt"></i></a>
                </li>
            </ul>
        {% endif %}
    </div>
</nav>

<main role="main" class="container pt-3">
    {% include '@AcMarcheDuobac/_flash_messages.html.twig' %}

    {% block body %}

    {% endblock %}
</main>

<footer class="mb-5">

</footer>
{% block javascripts %}{% endblock %}
<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
        integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
        crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"
        integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49"
        crossorigin="anonymous"></script>
<script src="{{ asset('bootstrap/js/bootstrap.min.js') }}"></script>

{% block scripts %}

{% endblock %}
</body>
</html>
