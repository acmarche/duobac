<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8">
    {% block favicon %}
        <link rel="icon" type="image/x-icon" href="{{ asset('bundles/acmarcheduobac/favicon.ico') }}"/>
    {% endblock %}
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>{% block title %}Mon duobac{% endblock %}</title>

    {% block stylesheets %}{% endblock %}

    {{ encore_entry_link_tags('app') }}
    {{ encore_entry_script_tags('app') }}

    <link href="{{ asset('bundles/acmarcheduobac/css/app.css') }}" rel="stylesheet">
    <link href="{{ asset('bundles/acmarcheduobac/css/print.css') }}" rel="stylesheet" media="print">

</head>
<body>
{% set action = app.request.attributes.get("_route") %}
<div class="container">
    <header class="d-flex flex-wrap justify-content-center py-3 mb-4 border-bottom">
        <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-dark text-decoration-none">
            <i class="fa fa-trash-alt"></i>
            <span class="fs-4">Duobac</span>
        </a>
        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
            {% include '@AcMarcheDuobac/_menu.html.twig' %}
        {% endif %}
    </header>
</div>

<main role="main" {% block main_class %}class="container pt-3"{% endblock %}>

    {% include '@AcMarcheDuobac/_flash_messages.html.twig' %}

    {% block notifications %}

    {% endblock %}

    {% block body %}

    {% endblock %}
</main>

{% block footer %}
    <footer class="mb-5 d-print-none">

    </footer>
{% endblock %}
{% block scripts %}{% endblock %}
{% block javascripts %}{% endblock %}

</body>
</html>
