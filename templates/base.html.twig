<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8">
    {% block favicon %}
        <link rel="icon" type="image/x-icon" href="{{ asset('bundles/acmarcheduobac/favicon.ico') }}"/>
    {% endblock %}
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>{% block title %}Mon duobac{% endblock %}</title>
    {% block stylesheets %}{% endblock %}
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css"
          integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <link href="{{ asset('bundles/acmarcheduobac/css/app.css') }}" rel="stylesheet">
    <link href="{{ asset('bundles/acmarcheduobac/css/print.css') }}" rel="stylesheet" media="print">
    {# {{ encore_entry_link_tags('app') }} #}
</head>
<body>
{% set action = app.request.attributes.get("_route") %}
<nav class="navbar navbar-expand-md navbar-light bg-light fixed-top border-bottom shadow-sm">
    {% block brand %}
        <i class="fas fa-recycle icon-green"></i> <a class="navbar-brand" href="{{ path('duobac_home') }}">Mes
        pesées</a>
    {% endblock %}
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExampleDefault"
            aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse justify-content-md-center" id="navbarsExampleDefault">
        <ul class="navbar-nav mr-auto ml-auto">
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                {% block menu_top %}
                    {% include '@AcMarcheDuobac/_menu.html.twig' %}
                {% endblock %}
            {% endif %}
        </ul>
        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a href="{{ path('app_logout') }}" class="nav-link" title="Déconnexion"><i
                                class="fas fa-sign-out-alt"></i> {{ app.user }}</a>
                </li>
            </ul>
        {% endif %}
    </div>
</nav>

<main role="main" class="container pt-3">
    {% include '@AcMarcheDuobac/_flash_messages.html.twig' %}

    {% block body %}

    {% endblock %}
</main>

<footer class="mb-5">

</footer>
{% block javascripts %}{% endblock %} {#
{{ encore_entry_script_tags('app') }} #}
<script src="https://code.jquery.com/jquery-3.5.1.min.js"
        integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx"
        crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
        integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
        crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/js/all.min.js"></script>
{% block scripts %}

{% endblock %}
</body>
</html>
