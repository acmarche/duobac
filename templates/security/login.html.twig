{% extends '@AcMarcheDuobac/base.html.twig' %}

{% block title %}Me connecter{% endblock %}

{% block stylesheets %}
    <link href="{{ asset('bundles/acmarcheduobac/css/signin.css') }}" rel="stylesheet">
{% endblock %}

{% block body %}
    <div class="text-center">

        <form class="form-signin" method="post" action="{{ path('app_login') }}">
            <img class="mb-4 img-fluid" title="Adl"
                 src="{{ asset('bundles/acmarcheduobac/images/Marche_logo.png') }}"
                 alt="logo" width="90">
            <h1 class="h3 mb-3 font-weight-normal">Authentification</h1>
            <p class="text-info">Rentrez votre numéro de matricule <br/>
                ainsi que le numéro de puce du duobac</p>

            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
            <label for="inputEmail"
                   class="sr-only">Numéro de matricule</label>
            <input type="text" name="rrn" value="{{ last_username }}" id="inputEmail" class="form-control mb-2"
                   placeholder="Votre numéro de matricule" required autofocus>
            <label for="inputPassword"
                   class="sr-only">Numéro de puce</label>
            <input autocomplete="off" name="puce" type="password" id="inputPassword" class="form-control"
                   placeholder="Numéro de puce du duobac" required>

            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}"
            >
            <button class="btn btn-lg btn-primary btn-block"
                    type="submit"><i class="fas fa-sign-in-alt"></i> Me connecter
            </button>
        </form>
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
            Où trouver ces informations ?
        </button>
    </div>

    {% include '@AcMarcheDuobac/security/_facture.html.twig' %}
{% endblock %}

